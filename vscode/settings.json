{
    "workbench.colorTheme": "Night Owl (No Italics)",
    "workbench.colorCustomizations": {
        "[Night Owl]": {
            "activityBar.background": "#000C1D",
            "activityBar.border": "#102a44",
            "sideBar.background": "#001122",
            "sideBar.border": "#102a44",
            "sideBar.foreground": "#8BADC1"
        },
        "[Night Owl (No Italics)]": {
            "activityBar.background": "#000C1D",
            "activityBar.border": "#102a44",
            "sideBar.background": "#001122",
            "sideBar.border": "#102a44",
            "sideBar.foreground": "#8BADC1"
        }
    },
    "editor.cursorStyle": "block",
    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "files.defaultLanguage": "markdown",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreview": false,
    "breadcrumbs.enabled": true,
    "editor.renderControlCharacters": true,
    "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": true,
    "editor.minimap.enabled": false,
    "search.exclude": {
        "**/build": true
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.rulers": [80, 100, 120],
    "files.trimTrailingWhitespace": true,
    "editor.detectIndentation": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "files.exclude": {
        "**/.build": true,
        "**/.classpath": true,
        "**/.DS_Store": true,
        "**/.factorypath": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.next": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.svn": true,
        "**/.webpackCache": true,
        "**/coverage": true,
        "**/CVS": true,
        "**/dist": true,
        "**/swagger": true,
        "cc-storybook": true,
        "out/": true
    },
    "extensions.ignoreRecommendations": true,
    "gitlens.blame.format": "${author|15?} ${ago|15-}",
    "gitlens.heatmap.ageThreshold": "90",
    "gitlens.blame.heatmap.location": "left",
    "files.associations": {
        ".stylelintrc": "jsonc",
        ".eslintrc": "jsonc",
        ".env": "shellscript"
    },
    "yaml.schemas": {
        "file:///Users/mplis/.vscode/extensions/atlassian.atlascode-1.3.1/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.wordWrap": "off",
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.wordWrapColumn": 100,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[mdx]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.disableLanguages": ["markdown"],
    "editor.parameterHints.enabled": false,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.trailingComma": "es5",
    "editor.renderWhitespace": "all",
    "prettier.printWidth": 100,
    "prettier.tabWidth": 4,
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.menus": {
        "editor": {
            "blame": false,
            "clipboard": true,
            "compare": true,
            "details": false,
            "history": false,
            "remote": false
        },
        "editorGroup": false,
        "editorTab": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true,
            "stashInline": true
        },
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true,
            "stash": true
        }
    },
    "workbench.tree.indent": 16,
    "editor.hover.delay": 200,
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "eslint.migration.2_x": "off",
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "eslint.workingDirectories": [{ "mode": "auto" }],
    "todohighlight.keywords": [
        { "text": "TODO:", "backgroundColor": "#F6E05E", "color": "#744210" },
        { "text": "QUESTION:", "backgroundColor": "#FED7D7", "color": "#E53E3E" },
        { "text": "PICKUP:", "backgroundColor": "#7FFFD4", "color": "#000000" }
    ],
    "editor.gotoLocation.multipleDefinitions": "goto",
    "auto-rename-tag.activationOnLanguage": ["html", "js", "jsx", "tsx"],
    "typescript.reportStyleChecksAsWarnings": false,
    "javascript.preferences.importModuleSpecifier": "relative",
    "search.useIgnoreFiles": false,
    "typescript.tsserver.log": "off",
    "gitlens.views.searchAndCompare.avatars": false,
    "redhat.telemetry.enabled": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "workbench.sideBar.location": "right",
    "security.workspace.trust.untrustedFiles": "open",
    "gitlens.codeLens.authors.command": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.autoClosingBrackets": "always",
    "window.zoomLevel": 2
}
